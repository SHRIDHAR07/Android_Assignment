<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/white"
    android:paddingTop="50dp"
    android:padding="20dp"
    android:elevation="50dp"
    android:layout_marginTop="15dp">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white">
    <ImageView
        android:id="@+id/cart_item_image_list"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/contacts" />

    <TextView
        android:id="@+id/cart_item_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cred_btn_eye"
        android:layout_toRightOf="@+id/cart_item_image_list"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/Name" />

    <TextView
        android:id="@+id/cart_item_price_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/cart_item_image_list"
        android:gravity="center"
        android:text="Price" />

    <TextView
        android:id="@+id/cart_item_Quantity_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/cart_item_image_list"
        android:gravity="center"
        android:text="Quantity" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

